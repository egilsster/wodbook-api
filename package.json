{
  "name": "wodbook-api",
  "version": "0.0.1-0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/egilsster/wodbook-api"
  },
  "author": "egilsster",
  "license": "ISC",
  "scripts": {
    "start": "ts-node src/server.ts",
    "dev": "nodemon -w src/ src/server.ts --exec ts-node",
    "build": "tsc",
    "test": "NODE_ENV=test jest",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "component-test": "jest --config component-test.config.json --runInBand --forceExit",
    "deploy": "now --docker"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(tests)/.*\\.spec\\.(ts)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  },
  "now": {
    "alias": "wodbook",
    "name": "wodbook",
    "env": {
      "MONGO_URI": "@db"
    }
  },
  "dependencies": {
    "@godaddy/terminus": "^4.1.0",
    "cls-hooked": "^4.2.2",
    "fs-extra": "^7.0.0",
    "http-status-codes": "^1.3.0",
    "jsonwebtoken": "^8.1.0",
    "koa": "^2.6.2",
    "koa-body": "^4.0.6",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.4",
    "mongodb": "^3.0.5",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "sqlite": "^3.0.0",
    "strip-ansi": "^5.0.0",
    "uid-safe": "^2.1.5",
    "winston": "^2.4.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/cls-hooked": "^4.2.1",
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^23.3.10",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/koa": "^2.0.47",
    "@types/koa-router": "^7.0.35",
    "@types/koa-static": "^4.0.0",
    "@types/lodash": "^4.14.119",
    "@types/mongodb": "^3.1.18",
    "@types/node": "^10.12.18",
    "@types/request-promise-native": "^1.0.15",
    "@types/sinon": "^7.0.2",
    "@types/supertest": "^2.0.7",
    "codeclimate-test-reporter": "^0.5.0",
    "depcheck": "^0.6.8",
    "jest": "^23.6.0",
    "nodemon": "^1.15.1",
    "sinon": "^7.2.2",
    "supertest": "^3.0.0",
    "ts-jest": "^23.0.0",
    "ts-node": "^6.0.0",
    "tslint": "^5.9.1",
    "typescript": "^3.2.2"
  }
}
