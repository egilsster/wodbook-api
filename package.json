{
  "name": "wodbook-api",
  "version": "0.0.1-0",
  "description": "",
  "engines": {
    "node": "8.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/egilsster/wodbook-api"
  },
  "author": "egilsster",
  "license": "ISC",
  "scripts": {
    "start": "ts-node src/server.ts",
    "dev": "nodemon src/server.ts --exec ts-node",
    "build": "tsc",
    "test": "NODE_ENV=test jest",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "component-test": "jest --config component-test.config.json --runInBand --forceExit",
    "deploy": "now --docker"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(tests)/.*\\.spec\\.(ts)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  },
  "now": {
    "alias": "wodbook",
    "name": "wodbook",
    "env": {
      "MONGO_URI": "@db"
    }
  },
  "dependencies": {
    "@types/body-parser": "1.17.0",
    "@types/config": "0.0.34",
    "@types/continuation-local-storage": "^3.2.1",
    "@types/express": "^4.11.0",
    "@types/fs-extra": "^5.0.1",
    "@types/jest": "^23.0.0",
    "@types/jsonwebtoken": "^7.2.5",
    "@types/lodash": "^4.14.91",
    "@types/mongoose": "^5.0.7",
    "@types/multer": "^1.3.6",
    "@types/node": "^10.0.3",
    "@types/request-promise": "^4.1.41",
    "@types/sinon": "^5.0.0",
    "@types/supertest": "^2.0.4",
    "@types/winston": "^2.3.7",
    "body-parser": "^1.18.2",
    "config": "^1.30.0",
    "continuation-local-storage": "^3.2.1",
    "express": "^4.16.2",
    "express-bearer-token": "^2.1.1",
    "express-winston": "^2.4.0",
    "fs-extra": "^6.0.0",
    "http-status-codes": "^1.3.0",
    "jsonwebtoken": "^8.1.0",
    "lodash": "^4.17.4",
    "mongodb": "^3.0.5",
    "mongoose": "^5.0.12",
    "multer": "^1.3.0",
    "request-promise": "^4.2.2",
    "sqlite": "^2.9.1",
    "typescript": "^2.7.2",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "codeclimate-test-reporter": "^0.5.0",
    "depcheck": "^0.6.8",
    "jest": "^22.4.2",
    "nodemon": "^1.15.1",
    "nsp": "^3.2.1",
    "sinon": "^6.0.0",
    "supertest": "^3.0.0",
    "ts-jest": "^23.0.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.9.1"
  }
}
