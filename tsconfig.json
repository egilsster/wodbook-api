{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "rootDir": "./src",
    "outDir": "./dist",
    "inlineSourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "lib": ["es2017", "dom"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".vscode"
  ]
}
